<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="768.0" prefWidth="1366.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <Label fx:id="pageTitle" layoutX="80.0" layoutY="11.0" prefHeight="96.0" prefWidth="418.0" text="Payment with VNPay" textAlignment="CENTER" textFill="#5091e6">
            <font>
                <Font name="Arial Bold" size="42.0" />
            </font>
        </Label>
        <ImageView fitHeight="73.0" fitWidth="73.0" layoutX="14.0" layoutY="28.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../assets/Logo.png" />
            </image>
        </ImageView>
        <Label fx:id="resultLabel" alignment="CENTER" layoutX="3.0" layoutY="251.0" prefHeight="84.0" prefWidth="1357.0" text="PAYMENT RESULT" textAlignment="CENTER" textFill="#5091e6">
            <font>
                <Font name="Arial Bold" size="72.0" />
            </font>
        </Label>
        <Label fx:id="messageLabel" alignment="CENTER" contentDisplay="CENTER" layoutX="3.0" layoutY="350.0" prefHeight="216.0" prefWidth="1358.0" text="Message" textAlignment="CENTER" textFill="#5091e6" wrapText="true">
            <font>
                <Font name="Arial" size="36.0" />
            </font>
        </Label>
        <Button fx:id="okButton" alignment="CENTER" contentDisplay="CENTER" layoutX="525.0" layoutY="675.0" mnemonicParsing="false" onMouseClicked="#confirmPayment" prefHeight="46.0" prefWidth="316.0" style="-fx-background-color: #5091e6; -fx-cursor: hand;" text="Return to homepage" textFill="WHITE">
            <font>
                <Font name="Arial Bold" size="24.0" />
            </font>
        </Button>
    </children>
</AnchorPane>
